{
  "name": "mytrelloback",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon ./bin/www --exec \"npm run lint && node\"",
    "start": "node ./bin/www",
    "deploy": "pm2 start ./bin/www --name \"todo\"",
    "stop": "pm2 stop todo || true",
    "lint": "eslint --fix ./routes/*.js",
    "test": "mocha ./test/*.spec.js"
  },
  "dependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "connect-history-api-fallback": "^1.5.0",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "jade": "~1.11.0",
    "jsonwebtoken": "^8.3.0",
    "mocha": "^5.2.0",
    "mongoose": "^5.1.7",
    "morgan": "~1.9.0",
    "npm": "^6.1.0",
    "sinon": "^6.1.0"
  },
  "devDependencies": {
    "eslint": "^5.0.1",
    "node-mocks-http": "^1.7.0",
    "nodemon": "^1.17.5"
  }
}
